<h1>Carica il tuo documento</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@document) do |f| %>
      
      <%= f.file_field :file %>

      <%= f.label :titolo %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.submit "Carica pdf", class: "btn btn-primary" %>
    <% end %>
    
    <%= form_for(@document, :url => { :action => :txt } ) do |f| %>
      
      <%= f.file_field :file %>

      <%= f.label :titolo %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.submit "Carica txt", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
