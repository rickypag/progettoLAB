<h1>Inserisci una nuova regola</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= form_for(@rule) do |f| %>
      <%= f.label :testo %>
      <%= f.text_field :testo, class: 'form-control' %>

      <%= f.submit "Aggiungi regola", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
