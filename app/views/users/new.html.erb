<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
          <div class="col-lg-7">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Crea un Account!</h1>
              </div>
              <%= form_for(@user) do |f| %>
                <div class="form-group row">
                
                <div class="form-group">
                  <%= f.email_field :email, :class => 'form-control', :required => true, :placeholder => 'Indirizzo email' %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, :class => 'form-control', :required => true, :placeholder => 'Password' %>
                </div>
                
                <%= f.submit "Registrati", class: "btn btn-primary" %>
              <% end %>
              <hr>
              <div class="text-center">
                <a class="small" href="forgot-password.html" disabled>Password dimenticata?</a>
              </div>
              <div class="text-center">
                <a class="small" href="/paginaLogin/login.php">Hai gi√† un account? Login!</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
